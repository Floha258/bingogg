{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "additionalProperties": false,
    "required": ["authToken"],
    "description": "An outgoing client websocket message sent when a client performs an action in a room",
    "properties": {
        "authToken": {"type": "string", "description": "JWT for the room obtained from the server"}
    },
    "anyOf": [
        {
            "required": ["action"],
            "additionalProperties": false,
            "properties": {
                "action": "join",
                "payload": {
                    "required": ["nickname"],
                    "additionalProperties": false,
                    "properties": {
                        "nickname": {"type": "string"}
                    }
                }
            }
        },
        {
            "required": ["action"],
            "additionalProperties": false,
            "properties": {
                "action": "leave"
            }
        },
        {
            "required": ["action", "payload"],
            "additionalProperties": false,
            "properties": {
                "action": "chat",
                "payload": {
                    "required": ["message"],
                    "additionalProperties": false,
                    "properties": {
                        "message": {"type": "string"}
                    }
                }
            }
        },
        {
            "required": ["action", "payload"],
            "additionalProperties": false,
            "properties": {
                "action": "mark",
                "payload": {
                    "required": ["row", "col"],
                    "additionalProperties": false,
                    "properties": {
                        "row": {"type": "number"},
                        "col": {"type": "number"}
                    }
                }
            }
        },
        {
            "required": ["action", "payload"],
            "additionalProperties": false,
            "properties": {
                "action": "unmark",
                "payload": {
                    "required": ["row", "col"],
                    "additionalProperties": false,
                    "properties": {
                        "row": {"type": "number"},
                        "col": {"type": "number"}
                    }
                }
            }
        },
        {
            "required": ["action", "payload"],
            "additionalProperties": false,
            "properties": {
                "action": "changeColor",
                "payload": {
                    "required": ["color"],
                    "additionalProperties": false,
                    "properties": {
                        "color": {"type": "string"}
                    }
                }
            }
        }
    ]
}