{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "additionalProperties": false,
    "required": [],
    "description": "An incoming websocket message from the server telling the client of a change in room state or instructing it to take an action",
    "properties": {},
    "anyOf": [
        {
            "required": ["action", "message"],
            "additionalProperties": false,
            "properties": {
                "action": "chat",
                "message": {"type": "string"}
            }
        },
        {
            "required": ["action", "row", "col", "cell"],
            "additionalProperties": false,
            "properties": {
                "action": "cellUpdate",
                "row": {"type": "number"},
                "col": {"type": "number"},
                "cell": {"$ref": "./Cell.json"}
            }
        },
        {
            "required": ["action", "board"],
            "additionalProperties": false,
            "properties": {
                "action": "syncBoard",
                "board": {"$ref": "./Board.json"}
            }
        }
    ]
}